{
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "none",
  "javascript.suggestionActions.enabled": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "emmet.excludeLanguages": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "formatFiles.excludePattern": "node_modules,dist,build,.gitignore,.editorconfig,.browserslistrc,yarn.lock,.pnp.*",
  "search.exclude": {
    "**/build": true,
    "**/node_modules": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}

{
  "include": ["src/**/*.ts", "src/plugin.mts", "src/plugin.cts"],
  "compilerOptions": {
    "types": ["@types/node", "@types/jest"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2021"
  }
}
